<!-- nagano_view_pablic_orders_show -->
 
<h1>pablic_orders_show_注文履歴詳細画面</h1>
  
  
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-6">
        
        <h3>注文履歴詳細画面</h3>
        
        <!-- 注文履歴詳細画面 -->
        <table>
            <!-- 注文日,配送先,注文商品,支払金額 -->
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th></th>
              <th>支払方法</th>
            </tr>
          </thead>
          
          <tbody>
              <tr>
                <td><%= @order.created_at %></td>
                <td>
                  <%= @order.post_code %>
                  <%= @order.address %>
                </td>
                  <!-- 支払方法,日本語化表記済〇 -->
                <td>
                  <%= @order.payment_method_i18n %>
                </td>
                
              </tr>
              
          </tbody>
        </table>
 
        </div>
      </div>
    </div>
  </main>


