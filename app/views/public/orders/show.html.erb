<!-- nagano_view_pablic_orders_show -->
 
<h1>pablic_orders_show_注文履歴詳細画面</h1>
  
  
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-6">
        
        <h3>注文履歴詳細画面</h3>
        
        <!-- 注文履歴一覧画面 -->
        <table>
            <!-- 注文日,配送先,注文商品,支払金額 -->
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order_id| %>
                <!-- find_by,指定したカラムの値に基づいて1つのレコードを取得する -->
              <% order = Order.find_by(id: order_id) %>
              <tr>
                <td><%= order.created_at %></td>
                <td>
                  <%= order.post_code %>
                  <%= order.address %>
                </td>
                <td><%= order.billing_amount %></td>
                
              </tr>
              
            <% end %>
          </tbody>
        </table>
        
        
        
        </div>
      </div>
    </div>
  </main>


