<!-- nagano_view_pablic_orders_index -->


  <div class="row">
    <div class="mx-auto auto col-11">
    
    <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:250px;
        height:35px;
       }
      </style>
    
    <h3 class="example" align="center">注文履歴一覧画面</h3>
    
      <!-- 注文履歴一覧画面 -->
    <table border="1" width="1000"  height="50">
        <!-- 注文日,配送先,注文商品,支払金額 -->
      <thead>
        <tr class="example" align="left">
          <th style="width: 50px;">注文日</th>
          <th style="width: 200px;">配送先</th>
          <th style="width: 63px;">注文商品</th>
          <th style="width: 40px;">支払金額</th>
          <th style="width: 60px;">注文詳細</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
            
          <tr>
              <!-- 注文日△ -->
            <td>
              <%= order.created_at %>
            </td>
              <!-- 配送先,注文商品△ -->
            <td>
              <%= order.post_code %>
              <%= order.address %>
            </td>
              <!-- 注文商品△ -->
            <td>
              <% order.order_items.each do |order_item| %>
                <%= order_item.item.name %>
              <% end %>
            </td>
              <!-- 支払金額△ -->
            <td>
              <%= number_with_delimiter(order.billing_amount, delimiter: ',') %>円
            </td>
              <!-- 表示する〇 -->
            <td align="center" style="height: 50px;">
              <%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %>
            </td>
            
          </tr>
            
        <% end %>
      </tbody>
    </table>
    
    </div>
  </div>
      
      