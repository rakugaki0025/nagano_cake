<!-- nagano_view_pablic_orders_index -->
 
<h1>pablic_orders_index_注文履歴一覧画面</h1>
  
  
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-6">
        
        <h3>注文履歴一覧画面</h3>
        
          <!-- 注文履歴一覧画面 -->
        <table>
            <!-- 注文日,配送先,注文商品,支払金額 -->
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
            </tr>
          </thead>
          
          <tbody>
            <% @orders.each do |order| %>
                
              <tr>
                  <!-- 注文日 -->
                <td>
                  <%= order.created_at %>
                </td>
                  <!-- 配送先,注文商品 -->
                <td>
                  <%= order.post_code %>
                  <%= order.address %>
                </td>
                  <!-- 注文商品 -->
                <td>
                  <% order.order_items.each do |order_item| %>
                    <%= order_item.item.name %>
                  <% end %>
                </td>
                  <!-- 支払金額 -->
                <td>
                  <%= order.billing_amount %>
                </td>
                  <!-- 表示する〇 -->
                <td>
                  <%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %>
                </td>
              
                  <!-- 商品削除△ -->
                <td>
                <!--%= link_to '削除する', cart_item_path(cart_item), class:"btn btn-danger", method: :delete %-->
              </td>
              
              </tr>
                
            <% end %>
          </tbody>
        </table>
        
        </div>
      </div>
    </div>
  </main>


