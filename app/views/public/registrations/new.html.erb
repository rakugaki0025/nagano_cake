  <!-- nagano_views_public_registrations_new -->
  
  
  <div class="row">
    <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-8">
      
      <!-- 色指定のスタイル -->
      <style>
       .example {
        background-color: #F0F0F0;
        width:180px;
        height:28px;
       }
      </style>
      
      <h5 class="example" align="center">新規会員登録</h5>
      
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--%= form_with(model: resource, local: true, url: registration_path(resource_name)) do |f| %-->
            <!-- error_messages -->
        <%= render "public/shared/error_messages", resource: resource %>
            
        <table width="700"  height="100">
            <!-- last_name_box,first_name_box -->
          <tr>
            <th><%= f.label :名前 %></th>
              <th>
                (姓)<%= f.text_field :last_name, autofocus: true %>
              </th>
              <th>
                (名)<%= f.text_field :first_name, autofocus: true %>
              </th>
          </tr>
            <!-- last_name_kana_box,first_name_kana_box -->
          <tr>
            <th><%= f.label :フリガナ %></th>
              <th>
                (セイ)<%= f.text_field :last_name_kana, autofocus: true %>
              </th>
              <th>
                (メイ)<%= f.text_field :first_name_kana, autofocus: true %>
              </th>
          </tr>
            <!-- e-mail_box -->
          <tr>
            <th><%= f.label :メールアドレス %></th>
              <th>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </th>
          </tr>
            <!-- postal_code_box -->
          <tr>
            <th><%= f.label :郵便番号 %></th>
              <th>
                <%= f.text_field :postal_code, autofocus: true %>
              </th>
          </tr>
            <!-- address_box -->
          <tr>
            <th><%= f.label :住所 %></th>
              <th>
                <%= f.text_field :address, autofocus: true %>
              </th>
          </tr>
            <!-- telephone_number_box -->
          <tr>
            <th><%= f.label :電話番号 %></th>
              <th>
                <%= f.text_field :telephone_number, autofocus: true %>
              </th>
          </tr>
            <!-- password_box -->
          <tr>
            <th>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
            </th>  
            
            <th>  
              <%= f.password_field :password, autocomplete: "new-password" %>
            </th>
          </tr>
            <!-- passoword_confirmation_box -->
          <tr>
            <th><%= f.label :パスワード（確認用） %></th>
              <th>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </th>
          </tr>
            <!-- sign_up_box -->
          <tr>
            <th>
              <%= f.submit "新規登録", class:"btn btn-success" %>
            </th>
          </tr>
          
        </table>
          
        <% end %>
        
        <h5 class="example" align="center">既に登録済みの方</h5>
        
        <%= render "public/shared/links" %>からログインしてください。
        
    </div>
  </div>
    