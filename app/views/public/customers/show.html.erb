  <!-- nagano_view_pablic_customers_show -->
<h1>pablic_customers_show_顧客のマイページ画面</h1>
  
  
<main>
  <p id="notice"></p>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
        <thead>
            <h3 class = "btn btn-secondary" >マイページ</h3>
        </thead>
        <br>
        
        <table>
            <!-- 登録情報編集へ遷移△ -->
          <strong>
            登録情報
              <% if @customer == current_customer %>
                <%= link_to "編集する", information_edit_path, class:"btn btn-success" %>
              <% end %> 
          </strong>
            <!-- 顧客情報欄 -->
          <tbody>
                <!-- 氏名 -->
              <tr>
                <td>氏名</td>
                  <td>
                    <%= @customer.first_name %> <%= @customer.last_name %>
                  </td>
              </tr>
                <!-- カナ -->
              <tr>
                <td>カナ</td>
                  <td>
                    <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
                  </td>
              </tr>
                <!-- 郵便番号 -->
              <tr>
                <td>郵便番号</td>
                  <td>
                    <%= @customer.postal_code %>
                  </td>
              </tr>
                <!-- 住所 -->
              <tr>
                <td>住所</td>
                  <td>
                    <%= @customer.address %>
                  </td>
              </tr>
                <!-- 電話番号 -->
              <tr>
                <td>電話番号</td>
                  <td>
                    <%= @customer.telephone_number %>
                  </td>
              </tr>
                <!-- メールアドレス -->
              <tr>
                <td>メールアドレス</td>
                  <td>
                    <%= @customer.email %>
                  </td>
              </tr>
              
            </tbody>
            
        </table>
        
            <!-- 注文履歴一覧 △ -->
        <strong>
          注文履歴
            <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
        </strong>
        
      </div>
    </div>
  </div>
</main>