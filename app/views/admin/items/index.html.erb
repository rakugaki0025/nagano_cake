<!-- nagano_view_admin_items_index -->
 
<h1>_admin_index_商品一覧画面</h1>
  

  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11">
            
            <h3>商品一覧</h3>
            
              <!-- 商品ID,商品名,価格_一覧 -->
            <thead>
              <tr align=”center”>
                  
                <th>商品ID</th>
                <th></th>
                <th>商品名</th>
                <th></th>
                
                <th>税抜き価格</th>
                  
                <th colspan="3"></th>
              </tr>
            </thead>
              
            <% @items.each do |item| %>
                <!-- 商品一覧表示 -->
              <table>
                  <!-- 商品ID,商品名,価格_投稿内容 -->
                <tbody>
                  <tr align="center">
                      <!-- 商品ナンバー -->
                    <td>
                      <%= item.id %>
                    </td>
                    <th></th>
                      <!-- 商品名 -->
                    <td>
                      <%= link_to admin_show_path(item.id) do %>
                        <%= item.name %>
                      <% end %>
                    </td>
                    <td></td>
                      <!-- 商品価格 -->
                    <td>
                      <%= item.price %>
                    </td>
                    
                  </tr>
                </tbody>
                
              </table>
            <% end %>
            
        </div>
      </div>
    </div>
  </main>


