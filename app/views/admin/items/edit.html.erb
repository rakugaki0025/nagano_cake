<!-- nagano_view_admin_items_edit -->

<h1>_admin_edit_商品編集画面</h1>
  
    <!-- エラーメッセージ -->
  <% if @item.errors.any? %>
    <!-- エラーカウント -->
    <h2><%= @item.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
              <% @item.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
              <% end %>
            </ul>
  <% end %>

  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-6">
            
            <h3>商品編集</h3>
            
            <%= form_with model: @item, url: admin_update_path, method: :patch do |f| %>
                <!-- 商品画像△ -->
              <div class="form-group">
                <label for="image">
                  商品画像
                </label>
                  <%= f.file_field :image, accept: "image/*" %>
              </div>
                <!-- 商品名△ -->
              <div class="form-group">
                <label for="name">
                  商品名
                </label>
                  <%= f.text_field :name %>
              </div>
                <!-- 商品説明△ -->
              <div class="form-group">
                <label for="intoroduction">
                  商品説明
                </label>
                  <%= f.text_field :introduction %>
              </div>
                <!-- 税込み価格△ -->
              <div class="form-group">
                <label for="price">
                  税込み価格
                </label>
                  <%= f.text_field :price %>
              </div>
                <!-- 新規登録△ -->
              <strong class="form-group">
                <%= f.submit '変更を保存', class:"btn btn-success" %>
              </strong>
            <% end %>
            
        </div>
      </div>
    </div>
  </main>


