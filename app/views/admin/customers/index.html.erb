<!-- nagano_view_admin_customers_index_top -->
 
<h1>admin_Customers_index_顧客一覧画面</h1>
  
  <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto auto col-11 col-sm10 col-lg col-xl-6">
          
          <h3>会員一覧</h3>
            
              <!-- 会員ID,氏名,メールアドレス,ステータス -->
            <thead>
              <tr align=”center”>
                  
                <th>会員ID</th>
                <th></th>
                <th>氏名</th>
                <th></th>
                
                <th>メールアドレス</th>
                <th></th>
                <th>ステータス</th>
                  
                <th colspan="3"></th>
              </tr>
            </thead>
              
            <% @customers.each do |customer| %>
                <!-- 商品一覧表示 -->
              <table>
                  <!-- 商品ID,商品名,価格_投稿内容 -->
                <tbody>
                  <tr align="center">
                      <!-- 顧客ナンバー〇 -->
                    <td>
                      <%= customer.id %>
                    </td>
                    <th></th>
                      <!-- 顧客名〇 -->
                    <td>
                      <%= link_to admin_customers_show_path(customer.id) do %>
                        <%= customer.last_name %>
                        <%= customer.first_name %>
                      <% end %>
                    </td>
                    <td></td>
                      <!-- メールアドレス〇 -->
                    <td>
                      <%= customer.email %>
                    </td>
                    
                      <!-- 会員ステータス〇 -->
                    <td>
                      <% if customer.is_active %>
                        有効
                      <% else %>
                        無効
                      <% end %>
                    </td>
                    
                  </tr>
                </tbody>
                
              </table>
            <% end %>
          
        </div>
      </div>
    </div>
  </main>
  
  